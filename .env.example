# Target Configuration
TARGET_HOST=example.com
SCAN_INTERVAL_HOURS=2
HOST_CHECK_INTERVAL_MINUTES=15

# Scanning (optional tuning)
# Enrich Rustscan TCP results with targeted nmap -sV on discovered ports.
TCP_SERVICE_ENRICHMENT=true
# "light" (fast), "normal", "thorough" (slow)
TCP_SERVICE_ENRICHMENT_INTENSITY=light
# Max TCP ports to version-scan per run
TCP_SERVICE_ENRICHMENT_PORTS_LIMIT=200

# UDP scan behavior
# Number of UDP ports for nmap --top-ports when no explicit range is set
UDP_TOP_PORTS=1000
# Run UDP version detection (-sV) only on a prioritized subset (expected/common/open ports)
UDP_VERSION_DETECTION=true
UDP_VERSION_DETECTION_INTENSITY=light
UDP_VERSION_DETECTION_PORTS_LIMIT=50

# Email Notifications (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=Security Scanner <your-email@gmail.com>
SMTP_TO=alerts@example.com

# Webhook Notifications (Discord/Slack)
# Discord: https://discord.com/api/webhooks/xxx/yyy
# Slack: https://hooks.slack.com/services/xxx/yyy/zzz
WEBHOOK_URL=

# Timezone
TZ=Europe/Amsterdam

# Logging
LOG_LEVEL=INFO
# Log format: "text" for human-readable, "json" for structured JSON logs
LOG_FORMAT=text

# Expected Ports Monitoring
# Comma-separated list of ports that should be open. Format: port/protocol
# Example: 80/tcp,443/tcp,22/tcp,448/udp
# UDP ports in this list will be explicitly scanned even if not in top-N
# Alerts are sent when expected ports go from open to closed
EXPECTED_PORTS=

# WireGuard Verification (optional but recommended)
# For reliable WireGuard monitoring, configure all three settings:
#
# 1. Server's public key (base64) - for MAC1 computation and DH
WIREGUARD_PUBLIC_KEY=
# 2. Ports to probe for WireGuard (e.g., 446,51820)
WIREGUARD_PROBE_PORTS=
# 3. Scanner's private key (base64) - add corresponding public key to WireGuard server
#    Generate with: docker-compose run --rm --no-deps ld-host-scanner python3 -c "
#    from cryptography.hazmat.primitives.asymmetric.x25519 import X25519PrivateKey; import base64;
#    k=X25519PrivateKey.generate(); print('Private:', base64.b64encode(k.private_bytes_raw()).decode());
#    print('Public:', base64.b64encode(k.public_key().public_bytes_raw()).decode())"
WIREGUARD_SCANNER_PRIVATE_KEY=
